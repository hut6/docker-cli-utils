#!/bin/bash

set -e

if [ $# -eq 0 ]
  then
    echo "Specify a branch name, a tag, or a commit hash"
    exit 1
fi

REVISION=$(git rev-parse --short $1)

REPO=$(git config --get remote.origin.url)

IMG_NAME="hut6/$(basename -s .git $REPO):$1"

SSH_KEY=$(cat ~/.ssh/id_rsa);

docker build -t $IMG_NAME -f deploy/build/Dockerfile --build-arg REVISION=$REVISION --build-arg GIT_REMOTE=$REPO --build-arg SSH_KEY="$SSH_KEY" ./deploy

./bin/push $1
